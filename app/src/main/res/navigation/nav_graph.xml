<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mealListFragment">

    <fragment
        android:id="@+id/mealListFragment"
        android:name="com.bignerdranch.android.nomnommap.MealListFragment"
        android:label="MealListFragment"
        tools:layout="@layout/fragment_meal_list">
        <action
            android:id="@+id/show_meal_detail"
            app:destination="@id/mealDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailFragment"
        android:name="com.bignerdranch.android.nomnommap.MealDetailFragment"
        android:label="MealDetailFragment"
        tools:layout="@layout/fragment_meal_detail">
        <argument
            android:name="mealId"
            app:argType="java.util.UUID" />
        <action
            android:id="@+id/select_date"
            app:destination="@id/datePickerFragment" />
        <action
            android:id="@+id/select_time"
            app:destination="@id/timePickerFragment" />
    </fragment>
    <dialog
        android:id="@+id/datePickerFragment"
        android:name="com.bignerdranch.android.nomnommap.DatePickerFragment"
        android:label="DatePickerFragment" >
        <argument
            android:name="mealDate"
            app:argType="java.util.Date" />
    </dialog>
    <dialog
        android:id="@+id/timePickerFragment"
        android:name="com.bignerdranch.android.nomnommap.TimePickerFragment"
        android:label="TimePickerFragment" >
        <argument
            android:name="mealDate"
            app:argType="java.util.Date" />
    </dialog>
</navigation>